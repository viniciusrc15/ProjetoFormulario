<!DOCTYPE HTML5>
<html lang="pt-br">
<head>
	<meta charset="UTF-8">
	<script src="js/jquery-1.5.2.min.js" type="text/javascript"></script>
	<link rel="stylesheet" href="css/bulma.css"> 
	<meta http-equiv="content-type" content="text/html; charset=utf-8"/>
	<link rel="shortcut icon" href="img/inf.ico">
	<script src="js/jspdf.min.js"></script>
	<script src="js/html2canvas.js"></script>
	<script src="js/geraPDF.js" type="text/javascript"></script>
	<link rel="stylesheet" type="text/css" href="css/estilo.css" />
	<link href="https://fonts.googleapis.com/css?family=ABeeZee" rel="stylesheet">
	<title>Informações Cadastrais</title>
</head>
<body>
	<div id="conteudo" class="top">
		<section id="centroInf">
			
			<h1>Dados do Inscrito</h1><br><br>
			<div id="editor"></div>
			<!--<h2>Dados pessoais</h2>-->
			<table class="table is-bordered">
				<thead>
					<td>
						<h3>Nome Completo</h3>					
					</td>
					<td>
						<h3>Data nascimento</h3>
					</td>
				</thead>
				<tbody>
					<td padding = "0"><%= dados.nome %></td>
					<td><%= dados.dtNascimento %></td>
				</tbody>
			</table>
			<table class="table is-bordered">
				<thead>
					<td>
						<h3>Email</h3>					
					</td>
					<td>
						<h3>RG</h3>
					</td>
				</thead>
				<tbody>
					<td><%= dados.email %></td>
					<td><%= dados.rg %></td>
				</tbody>
			</table>
			<table class="table is-bordered">
				<thead>
					<td>
						<h3>CPF</h3>					
					</td>
					<td>
						<h3>Telefone</h3>
					</td>
				</thead>
				<tbody>
					<td><%= dados.cpf %></td>
					<td><%= dados.telContato %></td>
				</tbody>
			</table>
		</section>
		<section id="centroInf">
			<table class="table is-bordered">
				<h2>Endereço</h2>
				<thead>
					<td>
						<h3>CEP</h3>					
					</td>
					<td>
						<h3>Logradouro</h3>
					</td>
					<td>
						<h3>Número</h3>
					</td>
				</thead>
				<tbody>
					<td><%= dados.cep %></td>
					<td><%= dados.rua %></td>
					<td><%= dados.numero %></td>
				</tbody>
			</table>
			<table class="table is-bordered">
				<thead>
					<td>
						<h3>Complemento</h3>					
					</td>
					<td>
						<h3>Bairro</h3>
					</td>
					<td>
						<h3>Municipio</h3>
					</td>
				</thead>
				<tbody>
					<td><%= dados.complemento %></td>
					<td><%= dados.bairro %></td>
					<td><%= dados.idCidade %></td>
				</tbody>
			</table>
			<table class="table is-bordered">
				<thead>
					<td>
						<h3>Estado</h3>					
					</td>
					<td>
						<h3>País</h3>
					</td>
				</thead>
				<tbody>
					<td><%= dados.idEstado %></td>
					<td>Brasil</td>
				</tbody>
			</table>
		</section>
		<section id="centroInf">
			<h2>Informações do curso</h2>
			<table class="table is-bordered">
				<thead>
					<td>
						<h3>1° opção de curso</h3>					
					</td>
					<td>
						<h3>Unidade</h3>
					</td>
				</thead>
				<tbody>
					<td><%= dados.idCursoPri %></td>
					<td><%= dados.idUnidade %></td>
				</tbody>
			</table>
			<table class="table is-bordered">
				<thead>
					<td>
						<h3>2° opção de curso</h3>					
					</td>
					<td>
						<h3>Unidade</h3>
					</td>
				</thead>
				<tbody>
					<td><%= dados.idCursoSec %></td>
					<td><%= dados.idUnidadSec %></td>
				</tbody>
			</table>
			<p><h2>Assinatura: </h2></p>
			<img class ="image is-96x96" src="/uploads/assinatura.jpg" alt="Assinatura"><br>
			<!-- Gera Pdf apartir de app/public/js/geraPDF -->
			<button style="align-content: center" class="button is-success is-hover" id="geraPdf">Gerar PDF</button>
			<div id="fim"></div>
		</section>
	</div>
</body>
</html>