<!DOCTYPE HTML5>
<html lang="pt-br">
<head>
	<meta charset="UTF-8">
	<link rel="stylesheet" href="css/bulma.css">
	<meta http-equiv="content-type" content="text/html; charset=utf-8"/>
	<link rel="shortcut icon" href="img/inf.ico">
	<link rel="stylesheet" type="text/css" href="css/estilo.css" />
</head>
<body>
	<div class="top">
		<section id="centroInf">
			<h1>Dados de Inscrição</h1>
			<h2>Dados pessoais</h2>
			<table class="table is-bordered is-striped is-narrow">
				<thead>
					<td>
						<h3>Nome Completo</h3>					
					</td>
					<td>
						<h3>Data nascimento</h3>
					</td>
				</thead>
				<tbody>
					<td><%= dados.nome %></td>
					<td><%= dados.dtNascimento %></td>
				</tbody>
			</table>
			<table class="table is-bordered">
				<thead>
					<td>
						<h3>Email</h3>					
					</td>
					<td>
						<h3>RG</h3>
					</td>
				</thead>
				<tbody>
					<td><%= dados.email %></td>
					<td><%= dados.rg %></td>
				</tbody>
			</table>
			<table class="table is-bordered">
				<thead>
					<td>
						<h3>CPF</h3>					
					</td>
					<td>
						<h3>Telefone</h3>
					</td>
				</thead>
				<tbody>
					<td><%= dados.cpf %></td>
					<td><%= dados.telContato %></td>
				</tbody>
			</table>
		</section>
		<section id="centroInf">
			<h2>Endereço</h2>
			<table class="table is-bordered">
				<thead>
					<td>
						<h3>CEP</h3>					
					</td>
					<td>
						<h3>Lograouro</h3>
					</td>
					<td>
						<h3>Número</h3>
					</td>
				</thead>
				<tbody>
					<td><%= dados.cep %></td>
					<td><%= dados.rua %></td>
					<td><%= dados.numero %></td>
				</tbody>
			</table>
			<table class="table is-bordered">
				<thead>
					<td>
						<h3>Complemento</h3>					
					</td>
					<td>
						<h3>Bairro</h3>
					</td>
					<td>
						<h3>Municipio</h3>
					</td>
				</thead>
				<tbody>
					<td><%= dados.complemento %></td>
					<td><%= dados.bairro %></td>
					<td><%= dados.idCidade %></td>
				</tbody>
			</table>
			<table class="table is-bordered">
				<thead>
					<td>
						<h3>Estado</h3>					
					</td>
					<td>
						<h3>País</h3>
					</td>
				</thead>
				<tbody>
					<td><%= dados.idEstado %></td>
					<td>Brasil</td>
				</tbody>
			</table>

		</section>
		<section id="centroInf">
			<h2>Informações do curso</h2>
			<table class="table is-bordered">
				<thead>
					<td>
						<h3>1° opção de curso</h3>					
					</td>
					<td>
						<h3>Unidade</h3>
					</td>
				</thead>
				<tbody>
					<td><%= dados.idCursoPri %></td>
					<td>dados.idUnidade</td>
				</tbody>
			</table>
			<table class="table is-bordered">
				<thead>
					<td>
						<h3>2° opção de curso</h3>					
					</td>
					<td>
						<h3>Unidade</h3>
					</td>
				</thead>
				<tbody>
					<td><%= dados.idCursoSec %></td>
					<td>dados.idUnidade</td>
				</tbody>
			</table>
		</section>
	</div>
</body>
</html>